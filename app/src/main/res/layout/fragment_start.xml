<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startfragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_launcher_gwent_background"
    tools:context=".views.startMenu.StartFragment">

    <Button
        android:id="@+id/joinGameButton"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="Join Game"
        app:layout_constraintEnd_toEndOf="@+id/startGameButton"
        app:layout_constraintStart_toStartOf="@+id/startGameButton"
        app:layout_constraintTop_toBottomOf="@+id/startGameButton" />

    <Button
        android:id="@+id/action_settings"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="@+id/joinGameButton"
        app:layout_constraintStart_toStartOf="@+id/joinGameButton"
        app:layout_constraintTop_toBottomOf="@+id/joinGameButton" />

    <Button
        android:id="@+id/rulesButton"
        android:layout_width="132dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:text="Rules"
        app:layout_constraintEnd_toEndOf="@+id/action_settings"
        app:layout_constraintStart_toStartOf="@+id/action_settings"
        app:layout_constraintTop_toBottomOf="@+id/action_settings" />

    <Button
        android:id="@+id/startGameButton"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginTop="64dp"
        android:text="@string/next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher_gwent_foreground"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
