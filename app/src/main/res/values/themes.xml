<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gwent" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gwent_green_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/gwent_green_dark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Gwent.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Gwent.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Gwent.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>